<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag 'application', "data-turbo-track": "reload" %>
  <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_importmap_tags %>
  <title>DocPortal</title>
</head>
<body>
  <div class="container">
    <%= render 'layouts/header' %>
    <% if notice %>
      <%= render 'layouts/notice' %>
    <% elsif alert %>
      <%= render 'layouts/alert' %>
    <% end %>
    <br>
    <div class="container">
      <%= yield %>
    </div> 
  </div>
</body>
</html>

